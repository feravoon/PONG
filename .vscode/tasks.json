{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-L/opt/homebrew/lib",
                "-lSDL2",
                "-I/opt/homebrew/include",
                "-D_THREAD_SAFE",
                "-ggdb3",
                "-O0",
                "-Wall",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lm", 
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}", "Stick.cpp", "Renderer.cpp", "Puck.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}